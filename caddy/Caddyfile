{
    auto_https on
}

http://{$DOMAIN:localhost} {
    redir https://{$DOMAIN:localhost}{uri} permanent
}

{$DOMAIN:localhost} {
    handle_path {$API_PATH:/api}/* {
        reverse_proxy {$BACKEND_API_HOST:api}:{$BACKEND_API_PORT:8103}
    }

    handle {
        reverse_proxy client:3000
    }
}

http://{$STREAMLIT_DOMAIN:streamlit.localhost} {
    redir https://{$STREAMLIT_DOMAIN:streamlit.localhost}{uri} permanent
}

{$STREAMLIT_DOMAIN:streamlit.localhost} {
    reverse_proxy {$STREAMLIT_HOST:streamlit}:{$STREAMLIT_PORT:8501}
}
